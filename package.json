    "@types/ramda": "^0.27.0",
    "@types/redis": "^2.0.0",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "apollo-server-testing": "^2.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-react": "^7.0.0",
    "glob": "^7.0.0",
    "jest": "^26.0.0",
    "msw": "^0.19.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.0",
    "semver": "^7.0.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.0.0",
    "ts-node-dev": "^1.0.0-0",
    "tsdx": "^0.13.0",
    "typescript": "^3.9.0"
